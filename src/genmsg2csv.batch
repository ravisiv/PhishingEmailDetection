#!/bin/bash
#SBATCH -J pi
#SBATCH -o pi_%j.out
#SBATCH -p htc
#SBATCH -N 1
#SBATCH --mem=10G

module purge
module load python/3
command_flags="-J pi -o  pi_%j.out -p htc -N 1 --mem 10G"
MSG_DIR=/users/rsivaraman/scratch/masterdata/messages/

#python3 gen_mbox2csv2.py $SCRATCH/mboxfiles/mboxdata/Apurv-Promotions.mbox

for f in ${MSG_DIR}/*; do
    if [ -d "$f" ]; then
        jobid=$(sbatch $command_flags --wrap "python3 msg2csv.py $f")
        echo $jobid
    fi
done
